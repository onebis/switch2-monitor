# LINE Messaging API設定
# LINE Developersコンソールでチャネルを作成: https://developers.line.biz/console/
# チャネルアクセストークンを取得
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here

# 送信先の指定（個人宛て or グループ宛て）
# 個人宛ての場合: LINE_USER_IDを設定
# グループ宛ての場合: LINE_GROUP_IDを設定（優先）
# どちらか一方を必ず設定してください

# ユーザーID（個人宛ての場合）
LINE_USER_ID=

# グループID（グループ宛ての場合）
LINE_GROUP_ID=

# 監視対象URL
# 任天堂公式ストアのURL（デフォルト設定済み）
TARGET_URL=https://store-jp.nintendo.com/

# キーワードマッチモード（any: いずれか一致、all: すべて一致）
KEYWORD_MATCH_MODE=any

# スクレイピング設定
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# 状態管理設定
STATE_FILE=switch2_state.json

# Cloud Storage設定
# ローカル開発: USE_CLOUD_STORAGE=False（ローカルファイルを使用）
# Cloud Functions本番: USE_CLOUD_STORAGE=True（GCSを使用 - 必須）
# ※Cloud Functionsでは状態の永続化にGCSが必要です
USE_CLOUD_STORAGE=False
GCS_BUCKET_NAME=your-bucket-name
GCS_STATE_FILE=switch2_lottery_state.json

# ログレベル（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# デバッグモード（True/False）
DEBUG_MODE=False
